<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Bienvenida_activity">

    <FrameLayout
        android:id="@+id/chat_view"
        android:layout_width="match_parent"
        android:layout_height="630dp"
        android:layout_margin="15dp"></FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/chat_box"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="15dp"></com.google.android.material.textfield.TextInputEditText>

        <Button
            android:id="@+id/send_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Enviar"
            android:textSize="16dp"></Button>

        <Button
            android:id="@+id/irCargarFoto"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Foto"
            android:layout_marginLeft="8dp"></Button>


    </LinearLayout>
</LinearLayout>